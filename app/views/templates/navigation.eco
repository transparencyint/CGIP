<% if @locationType or @locationName: %>
  <% if @currentRoute is 'showCountry': %>
    <a href="/">Countries</a>
  <% else: %>
    <a href="/edit">Dashboard</a>
  <% end %>
  <span class="location label">
    <% if @isoLocation: %>
      <span class="flag" style="background-image: url(/images/flags/<%= @isoLocation %>.svg);"></span>
      <%= @locationName %>
    <% else: %>
      <%= @locationType %>
    <% end %>
  </span>
<% end %>