<div class="animationHolder">
  <div class="name"><%= @name %></div>
  <div class="type">
  	<% if @organizationType: %>
    	<% if @organizationType == 'other': %>
    		<%= @typeOther %>
      	<% else: %>
      		<%= t( @organizationType ) %>
      	<% end %>
    <% end %>
  </div>
  <% if @hasCorruptionRisk: %>
  <img class="actor-risk-icon" src="/images/risk.png">
  <% end %>
</div>