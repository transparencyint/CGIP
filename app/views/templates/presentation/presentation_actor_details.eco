<div class="animationHolder">
  <div class="arrow"></div>

  <div class="holder">
    <div>
      <h3>
        <% if @name: %>
          <%= @name %> <% if @abbreviation: %>(<%= @abbreviation %>)<% end %> 
        <% else if @abbreviation: %>
          <%= @abbreviation %>
        <% else: %>
          Unknown
        <% end %> 
      </h3>
    </div>

    <div class="show">

      <div class="showType clearfix">
        <%= t('Type')%>: 
        <span class="pictogram" style="background-image: url(/images/pictograms/<%= @orgaType %>.png);"></span>
        <% if @organizationType == 'other': %>
          <%= @typeOther %>
        <% else if @organizationType: %>
          <% if @organizationType: %> 
            <%= t( @organizationType ) %>
          <% end %>
        <% else: %>
          <%= t('Not given')%>
        <% end %>
      </div>

      <% if @role.length: %> 
        <div class="clearfix">
          <%= t('Role')%>:   
          <% for role,idx in @role: %> 
            <% if idx != 0: %>
              / 
            <% end %>
              <%= t( role.substr(0,1).toUpperCase()+role.substr(1) ) %>
          <% end %>  
        </div>
      <% end %>

      <% if @purpose.length: %>  
        <div>
          <%= t('Purpose')%>:
          <% for purpose,idx in @purpose: %> 
            <% if idx != 0: %>
              / 
            <% end %>
              <% if purpose == "capacity_building": %>
                <%= t('Capacity Building') %>
              <% else if purpose == "redd": %>
                <%= t('REDD') %>
              <% else if purpose == "CDM": %>
                <%= t('CDM') %>
              <% else: %>
                <%= t( purpose.substr(0,1).toUpperCase()+purpose.substr(1) ) %>
              <% end %>
          <% end %>
        </div>
      <% end %>

      <% if @hasCorruptionRisk: %>  
      	<div class="clearfix">
          <p><%= t('There is a corruption risk') ; %></p>
          <div class="additionalInfo inlay">
            <div class="corruptionText"><%= @corruptionRisk %></div>
            <% if @corruptionRiskSource: %>
<<<<<<< HEAD
              <% if @corruptionRiskSourceIsALink: %>
                <%= t('Source'); %>: <a class="dark" href="<%= @corruptionRiskSource %>"><%= @corruptionRiskSource %></a>
              <% else: %>
                <%= t('Source'); %>: <%= @corruptionRiskSource %>
              <% end %>
            <% end %>
=======
              <%= t('Source') ; %>: http://<%= @corruptionRiskSource %>
>>>>>>> master
          </div>
      	</div>
      <% end %>
    	
      <% if @description: %>
      	<div class="clearfix">
      	  <p><%= t('Note')%>:
      		<%= @description%>
          </p>
      	</div> 
      <% end %>

    </div> 
  </div><!-- /.holder -->
</div>
