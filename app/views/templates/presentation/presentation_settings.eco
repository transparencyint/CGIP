<% if user.isLoggedIn(): %>
  <a href="<%= @editLink %>" class="button presentation rightAligned"><%= t('Editor') %></a>
<% end %>

<select id="language">
  <% for language in @languages: %>
    <option value="<%= language.code %>" <%= 'selected' if language.code is @active %>><%= language.name %></option>
  <% end %>
</select>
