<div class="topBar top tool controls">
  <time><%= new Date().toLocaleDateString() %></time>
</div>

<div class="sidebar">
  <div class="inner">
    <div class="light view controls vertical">
      <div class="fit screen icon control"></div>
    </div>
    <div class="light view controls vertical">
      <div class="zoom in icon control"></div>
      <div class="range control">
        <div class="bar"></div>
      </div>
      <div class="ligth zoom out icon control"></div>
    </div>
    <div class="light view controls control moneyMode">
      <div class="option">
        <input type="radio" name="moneyMode" value="disbursedMode" id="viewDisbursedMode">
        <label for="viewDisbursedMode"><%= t('Disbursed') %></label>
        <div class="coin"></div>
      </div>
      <div class="option">
        <input type="radio" name="moneyMode" value="pledgedMode" id="viewPledgedMode" checked>
        <label for="viewPledgedMode"><%= t('Pledged') %></label>
        <div class="coin"></div>
      </div>
    </div>
  </div>
</div>

<div class="centerLine"></div>
<div class="workspace"></div>