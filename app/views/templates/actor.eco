<div class="inner">
  <div class="name">
    <% if @name.length == 0: %>
      New Actor
    <% else: %>
      <%= @name %>
    <% end %>
  </div>
  <input type="text" value="<%= @name %>" placeholder="Name" class='nameInput' />
  <div class="roles">
	<% if @role: %>
		<% for value in @role: %>
			<div class="role"></div>
		<% end %>
	<% end %>
   </div>
</div>