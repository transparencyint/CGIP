<div class="svg-holder"></div>
<div class="inner">
  <div class="flexbox center">
    <div class="name">
      <% if @name.length == 0: %>
        New Actor
      <% else: %>
        <%= @name %>
      <% end %>
    </div>
    <input type="text" value="<%= @name %>" placeholder="Name" class='nameInput' />
  </div>
</div>

