    left 219px
    top 209px
  .peru 
    left 302px
    top 329px
  .dominicanRepublic 
    left 314px
    top 214px
  .kenya 
    left 654px
    top 279px
  .maledives 
    left 757px
    top 289px
  .vietnam 
    left 869px
    top 219px
  .indonesia 
    left 909px
