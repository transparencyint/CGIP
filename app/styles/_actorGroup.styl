.actor-group
  position absolute
  padding 10px
  background-color #EEE
  color #222
  border-radius 5px

  .actors
    display none
    list-style none
    padding 0
    margin 0
    width 200px

    li
      display inline
      line-height 30px
      margin-right 3px
      padding 3px
      border 2px solid black
      border-radius 3px

      &.dragging
        position fixed

  &.show-actors
    .actors
      display block