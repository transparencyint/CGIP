.actor-group
  width 144px
  height auto
  margin -31px 0 0 -74px
  padding-right 2px
  padding-bottom 2px
  &, &:before
    content ""
    left 0
    top 0
    position absolute
    color black
    border-radius 3px
    z-index 2
    background linear-gradient(top, #f5f5f5, #fbfbfb)
    box-shadow 0 1px 5px 1px rgba(0,0,0,.34), 0 1px #fff inset, 0 -3px #f0f0f0 inset, 0 0 0 3px #f9f9f9 inset
  &:before
    width 100%
    height 100%
    margin 2px 0 0 2px
  &.selected
    box-shadow 0 0 0 5px hsl(205,100%,55%), 0 1px 5px 1px rgba(0,0,0,.55), 0 1px #fbfbfb inset, 0 -5px #f0f0f0 inset, 0 0 0 5px #f9f9f9 inset
  &.locked
    opacity .5
    cursor not-allowed
  .actor-style
    position relative
    z-index 2
    top 4px
    left 4px
    width inherit
    height auto
    margin 0
    padding 0
  .caption
    height 55px
    position relative
    .text
      position absolute
      margin 9px 5px
      left 0
      top 0
      bottom 0
      right 40px
    .dropdown-control
      position absolute
      right 0
      top 0
      bottom 0
      width 40px
      text-align center
      line-height 55px
      color #bbb
      border-left 1px solid rgba(0,0,0,.05)
      cursor pointer
      .arrow
        transform translateY(1px) rotate(90deg)
      .toggleArrow
        transform none  
  &.open .dropdown-control .arrow
      transform none
  &.open .dropdown-control:active .arrow, 
  .dropdown-control:active .arrow
    transform translateY(1px) rotate(45deg)
  &.empty .caption 
    .name 
      right 0
    .dropdown-control
      display none
  .actors
    display none
    padding 1px
    margin 0
    border-top 1px solid rgba(0,0,0,0.08)

  &.open:not(.empty)
    .actors
      display block

.actor-group-actor
  position static
  line-height 45px
  height 45px
  width 134px
  margin 5px 4px
  padding 0 5px
  list-style none
  text-align center
  border-radius 1px
  background linear-gradient(top, #fff, #fafafa)
  box-shadow 0 1px white inset, 0 1px 1px 1px rgba(0,0,0,.21), 0 -2px #f0f0f0 inset, 0 0 0 2px #f9f9f9 inset
  
  .type
    display none
  
  &.hidden
    display block
    background none
    box-shadow none
    color transparent
    font 0/0 a
    text-shadow none
    border 1px dashed rgba(0,0,0,.21)

  &.dragging
    width 134px
    height 45px
    position absolute
    margin -20px 0 0 -60px
    
    border-radius 3px
    background linear-gradient(top, #f5f5f5, #fbfbfb)
    z-index 2
    