.actor-group
  position absolute
  padding 10px
  background-color #EEE
  color #222
  border-radius 5px

  .actors
    display none
    list-style none
    padding 0
    margin 0

    li
      display inline
      margin-left 5px
      padding 5px
      border 2px solid black
      border-radius 3px

  &.show-actors
    .actors
      display block
      width 300px
      height 300px