.tool.controls
  width 100%
  box(center, center, horizontal)
  border-left none
  border-right none
  z-index 5
  border-radius 0
  position relative
  .connection, .newActor
    vertical-align top
    cursor pointer
    border-left 1px solid hsla(217,55%,39%,.9)
    box-shadow 1px 0 hsl(220,73%,60%) inset    
    &:first-child
      border-left none
      box-shadow none
  .connection
    &.active, &:active
      border-left-color hsla(217,55%,29%,.9)
      box-shadow none
      & + .connection
        border-left-color hsla(217,55%,29%,.9)
      .description
        position relative
        top 1px
  .newActor  
    min-width 154px
    height 50px
    position relative
    &.slideUp
      .actor.new
        margin-top -18px
    &.slideIn
      .actor.new
        margin-top 130px
        transition width 500ms, height 500ms, margin 500ms
    &.curtainDown .actor.new 
      transition none
    .description
      height 33px
      padding-top 9px
      background linear-gradient(top, hsl(213,55%,55%), hsl(218,55%,52%))
      position relative
      z-index 3
      .name
        margin-top -3px
      &:after,
      &:before
        content ""
        position absolute
        z-index 1
        bottom -1px
        left 50%
        width 116px
        height 1px
        margin-left -58px
        box-shadow 0 1px rgba(0, 0, 0, 0.34), 0 2px rgba(0, 0, 0, 0.13), 0 3px rgba(0, 0, 0, 0.05)
      &:before
        width 118px
        margin-left -59px
        background #1f416c
        box-shadow none
    .dockBorder
      left 0
      right 0
      height 1px
      bottom -1px
      position absolute
      background #4075c8
    .plus
      font-size 16px
      font-weight bold
      margin-right 5px
    .dock
      position absolute
      top -31px
      width 118px
      left 50%
      margin-left -59px
      border-top 1px solid hsl(213,55%,28%)
      /* dock box */
      &:before
        content ""
        height 9px
        top 64px
        left 0
        right 0
        position absolute
        background linear-gradient(top, rgba(0,0,0,.21), rgba(255,255,255,.05))
        border 1px solid hsl(213,55%,28%)
        border-bottom-color hsl(213,55%,25%)
        border-top none
    .actor.new
      margin 43px 4px 0
      width 110px
      height 42px
      position relative
      transition width 250ms, height 250ms, margin 250ms
      cursor move
      .animationHolder
        width 100%
        height 100%
        line-height 40px
        border-radius 2px
        text-shadow none
    .cancel
      position absolute
      top 0
      left 0
      width 64px
      height 64px
      box-sizing content-box
      padding 8px
      display table
      color rgba(0,0,0,.34)
      text-shadow 0 1px rgba(255,255,255,.13)
      font-size 13px
      border-radius 100%
      background rgba(0,0,0,.08)
      box-shadow 0 0 2px 1px rgba(0,0,0,.13) inset
      display none
      span
        display table-cell
        vertical-align middle
        text-align center        
  .description
    height 50px
    padding 11px 13px 0
    font-size 13px
    img
      margin-top 4px
      display block
    .name
      font-size 12px
      text-align center
      display block
      white-space nowrap
      overflow hidden
      text-overflow ellipsis
