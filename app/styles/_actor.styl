.actor, .actor-holder
  position absolute
  width 144px
  height 55px
  margin -27px 0 0 -72px
  z-index 2
  
  color hsl(215,21%,21%)
  font-size 16px
  line-height 1.4
  
  backface-visibility hidden
  cursor url(/images/openhand_8_8.cur) 8 8, default
  transition opacity 180ms
  .animationHolder,
  .actor-style
    position relative
    width 100%
    height 100%
    padding 9px 5px
    border-radius 3px
    background linear-gradient(top, #f5f5f5, #fbfbfb)
    box-shadow 0 1px 5px 1px rgba(0,0,0,.34), 0 1px #fff inset, 0 -3px #f0f0f0 inset, 0 0 0 3px #f9f9f9 inset
  &.selected .animationHolder
    box-shadow 0 0 0 5px hsl(205,100%,55%), 0 1px 5px 1px rgba(0,0,0,.55), 0 1px #fbfbfb inset, 0 -5px #f0f0f0 inset, 0 0 0 5px #f9f9f9 inset
  &.hasCorruptionRisk:after
    content ""
    position absolute
    right -10px
    top -8px
    width 25px
    height 25px
    background url(../images/risk.png)
    background-size cover
  svg
    display none
  &.locked
    opacity .5
    cursor not-allowed
  &:active
    cursor url(/images/closedhand_8_8.bmp) 8 8, move
  &.disappear .animationHolder
    opacity 0
    transform scale(0.5) translateY(10px)
    transition 250ms
  .name  
    font-family "HelveticaNeueW01-57Cn"
    text-transform uppercase
  .name,
  .type
    text-align center
    white-space nowrap
    overflow hidden
    text-overflow ellipsis
  .type
    font-size 11px
    color hsl(215,13%,67%)