.view.controls
  background linear-gradient(top, hsl(213,55%,50%), hsl(218,55%,48%))
  box-shadow 0 0 1px rgba(0,0,0,.34), 0 0 5px rgba(0,0,0,.13), 0 1px hsl(215,73%,66%) inset
  &:not(:last-child)
    margin-bottom 13px
  .range
    height 144px
    .ui-slider-vertical
      height 100%
      width 40px
      background none
      border none
      &:after
        content ""
        position absolute
        width 3px
        left 19px
        height 100%
        background white
        border-radius 3px
        box-shadow 0 1px 3px black
      .ui-slider-handle
        left 6px
        height 10px
        margin-bottom -5px
        width 28px
        background white
        border-radius 2px
        border none
        box-shadow 0 1px 3px black
        outline none
  .icon
    width 41px
    height 41px
    background-position center
    background-repeat no-repeat
    cursor pointer
    position relative
    &.fit
      background-image url(../images/fit_screen.png)
    &.in
      background-image url(../images/zoom_in.png)
    &.out
      background-image url(../images/zoom_out.png)
    &.point
      width 43px
      height 43px
      .corner
        position absolute
        right 2px
        bottom 2px
        width 10px
        height 10px
        overflow hidden
        &:after
          content ""
          position absolute
          width 20px
          height 20px
          left 2px
          top 2px
          background hsl(217,55%,24%)
          transform rotate(45deg)
      .coin
        position absolute
        left 14px
        top 14px
        width 13px
        height 13px
        padding 1px
        background hsl(50,100%,50%)
        border-radius 100%
        box-shadow 0 1px hsl(50,100%,90%) inset, 0 1px 3px black
        &:after
          content ""
          display block
          width 100%
          height 100%
          background hsl(50,100%,45%)
          border-radius 100%
          box-shadow 0 1px 1px hsl(50,100%,40%) inset, 0 1px hsl(50,100%,85%)
      &[data-mode=pledgedMode].coin
        opacity 0.5
  &.moneyMode
    margin-top -1px
    position relative
    background none
    box-shadow none
    border none
    z-index auto
    &.open 
      .options
        z-index 11
        left 49px
        opacity 1
        transform rotateY(0)
        transition 250ms
        .option.fold
          transform rotateX(0)
          transition 500ms 250ms
    .options
      position absolute
      top 1px
      left 44px
      z-index 5
      opacity 0
      transform-origin left
      transform rotateY(-90deg)
      transition 250ms 500ms
      perspective 1000px
      .option
        position relative
        height 42px
        padding 0 21px 0 34px
        font-size 12px
        line-height 42px
        text-shadow none
        color hsl(0,0%,8%)
        border-bottom 1px solid hsl(0,0%,81%)
        cursor pointer
        &.fold
          transform-origin top
          transform rotateX(-180deg)
          transition 500ms
          backface-visibility hidden
          &:after
            display none
            content ""
            width 100%
            height 100%
            position absolute
            left 0
            top 0
            border-radius 0 0 3px 3px
            background red
            transform rotateX(-180deg)
        &:first-child
          border-radius 3px 3px 0 0
        &:last-child  
          border-radius 0 0 3px 3px
          border-bottom none
        &:hover
          background hsl(0,0%,87%)
        &.active:before
          content ""
          position absolute
          left 17px
          top 17px
          width 7px
          height 7px
          background black
          border-radius 100%