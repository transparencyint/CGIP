.button
  position relative
  display inline-block
  float left
  height 34px
  padding 0 8px
  font-size 12px
  line-height 34px
  background linear-gradient(top, hsl(213,55%,55%), hsl(218,55%,51%))
  border 1px solid hsla(217,55%,39%,.9)
  box-shadow 0 1px hsl(215,73%,66%) inset, 0 1px hsl(220,73%,60%)
  &:after
    content ""
    width 100%
    height 100%
    position absolute
    left 0
    top 0
  &.cog
    width 34px
  &.cog:after
    background url(/images/cog.png) no-repeat center
  &:first-of-type:not(:only-of-type)
    border-radius 3px 0 0 3px
    border-right none
  &:last-of-type
    border-radius 0 3px 3px 0
  &:only-of-type
    border-radius 3px
  &:active
  &.active
    background linear-gradient(top, hsl(213,55%,49%), hsl(218,55%,48%))
    box-shadow 0 1px hsl(220,73%,60%)
    &:after
      transform translateY(0.5px)
      opacity 0.8