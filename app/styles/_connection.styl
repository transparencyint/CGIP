disbursedColor = fundingColor //hsl(52, 95%, 60%)
pledgedColor = disbursedColor //desaturate(darken(disbursedColor, 21%), 21%)

.workspace .connection,
.legend .connection
  pointer-events none
  transition opacity 180ms
  path
    fill none
  marker
    path
      fill inherit
  use
    cursor pointer
    pointer-events visiblePainted
  marker
    fill none
  &.locked
    use
      cursor not-allowed
      pointer-events visiblePainted
    opacity 0.33
  &.money
    .arrow
      fill disbursedColor
    .path
      stroke disbursedColor
  &[data-mode=pledgedMode]
    .arrow
      fill pledgedColor
    .path
      stroke pledgedColor
      stroke-dasharray 8 3
  &.monitoring
    .arrow
      fill hsl(218,54%,64%)
    .path
      stroke hsl(218,54%,64%)
  &.accountability
    .arrow
      fill hsl(218,54%,31%)
    .path
      stroke hsl(218,54%,31%)
  &.amountUnknown
    svg
      opacity 0.55
  .clickBorder
    stroke transparent
  &.selected
    .selectPath
      stroke hsl(205,100%,55%)
    .selected-arrow
      fill hsl(205,100%,55%)
  .corruptionRisk
    background-image url(/images/risk.png)
    background-size cover
    position absolute
    width 25px
    height 25px
    margin-left -12px 0 0 -12px
    display none

