.connection
  path
    cursor pointer
  &.pledgedMode
    path
      stroke hsl(60,20%,60%)
    use
      fill hsl(60,20%,60%)
  &.selected
    path
      stroke hsl(205,100%,55%)
      marker-end url(#selectedTriangle)

  .connection-metadata
  	display none
  	padding 20px
  	color #000
  	background white
  	position absolute
  	z-index	10
  	border 1px solid rgba(0,0,0,.13)
  	border-radius 5px
  	box-shadow 0 1px 5px rgba(0,0,0,.13)
    
.activeConnection path
  stroke #a00000
.activeConnection use
  fill #a00000

