.connection
  &.ui-selected
    path
      stroke hsl(205,100%,55%)
      marker-end url(#selectedTriangle)

  .connection-metadata
  	display none
  	padding 20px
  	color #000
  	background white
  	position absolute
  	z-index	10
  	border 1px solid rgba(0,0,0,.13)
  	border-radius 5px
  	box-shadow 0 1px 5px rgba(0,0,0,.13)

.connection-form-container
  display none
  padding 20px
  color #000
  background white
  position absolute
  z-index 10
  cursor move
  opacity 0.95
  border 1px solid rgba(0,0,0,.13)
  border-radius 5px
  box-shadow 0 1px 5px rgba(0,0,0,.13)

.connection-form-container
	width 300px
	height 240px
	left 50%
	top 50%
	margin -120px 0 0 -150px