.connection
  &.ui-selected
    path
      stroke hsl(205,100%,55%)
      marker-end url(#selectedTriangle)

  .connection-metadata
  	display none
  	padding 20px
  	color #000
  	background white
  	position absolute
  	z-index	10
  	border 1px solid rgba(0,0,0,.13)
  	border-radius 5px
  	box-shadow 0 1px 5px rgba(0,0,0,.13)

.connection-form-container
  width 300px
  height 150px
  position absolute
  left 50%
  top 50%
  margin-left: -150px
  margin-top: -75px
  display none
  padding 20px
  color #000
  background white
  z-index 10
  opacity 0.95
  border 1px solid rgba(0,0,0,.13)
  border-radius 5px
  box-shadow 0 1px 5px rgba(0,0,0,.13)

  .movable
    height 10px
    background #eee
    cursor move

  input[type=text]
    width 100%
    border 1px solid #999

  input[type=submit]
    margin 10px 0
    padding 10px 15px
    

.activeConnection path
  stroke #a00000
.activeConnection use
  fill #a00000