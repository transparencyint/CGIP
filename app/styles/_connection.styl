.workspace .connection
  pointer-events none
  path
    fill none
  marker
    path
      fill inherit
  use
    cursor pointer
    pointer-events visiblePainted
  marker
    fill none
  &.money
    .arrow
      fill rgb(250, 223, 54)
    .path
      stroke rgb(250, 223, 54)
  &.pledgedMode
    path
      stroke hsl(60,20%,60%)
    use
      fill hsl(60,20%,60%)
  &.accountability
    .arrow
      fill white
    .path
      stroke white
  &.monitoring
    .arrow
      fill black
    .path
      stroke black
  &.amountUnknown
    opacity 0.6
  .clickBorder
    stroke transparent
  &.selected
    .selectPath
      stroke hsl(205,100%,55%)
    .selected-arrow
      fill hsl(205,100%,55%)
  .corruptionRisk
    background-image url(/images/redFlag.png)
    position absolute
    width 13px
    height 20px
    display none
  .metadata
    position absolute
    padding 1px 10px
    display none
    color #3b533a
    line-height 1
    white-space nowrap
    background hsl(78,66%,93%)
    z-index	10
    border 2px solid hsl(112,13%,45%)
    box-shadow 0 0 0 2px hsl(97,33%,92%), 0 1px 2px 3px rgba(0,0,0,0.34)

