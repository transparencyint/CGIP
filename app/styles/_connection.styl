.workspace .connection
  pointer-events none
  transition opacity 180ms
  path
    fill none
  marker
    path
      fill inherit
  use
    cursor pointer
    pointer-events visiblePainted
  marker
    fill none
  &.money
    .arrow
      fill rgb(250,223,54)
    .path
      stroke rgb(250,223,54)
  &.pledgedMode
    path
      stroke hsl(60,20%,60%)
    use
      fill hsl(60,20%,60%)
  &.monitoring
    .arrow
      fill hsl(218,54%,64%)
    .path
      stroke hsl(218,54%,64%)
  &.accountability
    .arrow
      fill hsl(218,54%,31%)
    .path
      stroke hsl(218,54%,31%)
  &.amountUnknown
    svg
      opacity 0.55
  .clickBorder
    stroke transparent
  &.selected
    .selectPath
      stroke hsl(205,100%,55%)
    .selected-arrow
      fill hsl(205,100%,55%)
  .corruptionRisk
    background-image url(/images/risk.png)
    background-size cover
    position absolute
    width 25px
    height 25px
    margin-left -12px 0 0 -12px
    display none
  &:hover .metadata
    display block
  .metadata
    position absolute
    padding 1px 10px
    display none
    color #3b533a
    line-height 1
    white-space nowrap
    background hsl(78,66%,93%)
    z-index	10
    border 2px solid hsl(112,13%,45%)
    box-shadow 0 0 0 2px hsl(97,33%,92%), 0 1px 2px 3px rgba(0,0,0,0.34)

