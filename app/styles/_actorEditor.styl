#actorEditor
  top 0
  left 0
  right 0
  bottom 0
  position absolute
  background #2C57A7 url(/images/bluegrid.svg) center top
  background-size 10px
  overflow hidden
  cursor url(/images/openhand_8_8.cur) 8 8, default;
  &:active
    cursor url(/images/closedhand_8_8.bmp) 8 8, move;
  &.zoom200
    background-size 200px
  &.zoom175
    background-size 175px
  &.zoom150
    background-size 150px
  &.zoom125
    background-size 125px
  &.zoom75
    background-size 75px
  &.zoom50
    background-size 50px
  &.zoom25
    background-size 25px
  &.connectionMode
    .actor
      cursor default
  .centerLine
    top 0
    left 50%
    width 0
    bottom 0
    border-right 1px solid rgba(0,0,0,.21)
    border-left 1px solid rgba(255,255,255,.08)
    position fixed
    
  .roleHolder, .dragHandleBars
    width 100%
    height 100%
    position fixed   
    z-index 3
    left 50%
    .roleArea
      width 25%
      height 100%
      position absolute
      opacity 0.5
      &#funding
        background: #9cb5de;  
      &#coordination
        background: #ffce7b;
        left 25%
      &#implementation
        background: #ada0b9;
        left 50%
      &#monitoring
        background: #bdce9c;
        left 75%
    .draghandle
      width 8px
      height 100%
      z-index 5
      cursor col-resize
      position absolute
      background #000
      opacity 0.0
    .draghandle:hover
      opacity 0.1
  .dragHandleBars
    width auto
    z-index 4

.workspace
  position absolute
  left 50%
  top 0
  &.hide-money
    .money
      display none
  &.hide-accountability
    .accountability
      display none
  &.hide-monitoring
    .monitoring
      display none
  .connection
    position absolute