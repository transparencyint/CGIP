#actorEditor
  top 0
  left 0
  right 0
  bottom 0
  position absolute
  background #2C57A7 url(/images/bluegrid.svg) center top
  background-size 10px
  overflow hidden
  cursor url(/images/openhand_8_8.cur) 8 8, default;
  &:active
    cursor url(/images/closedhand_8_8.bmp) 8 8, move;
  &.zoom200
    background-size 200px
  &.zoom175
    background-size 175px
  &.zoom150
    background-size 150px
  &.zoom125
    background-size 125px
  &.zoom75
    background-size 75px
  &.zoom50
    background-size 50px
  &.zoom25
    background-size 25px
  &.connectionMode
    .actor
      cursor default
  .centerLine
    top 0
    left 50%
    width 0
    bottom 0
    border-right 1px solid rgba(0,0,0,.21)
    border-left 1px solid rgba(255,255,255,.08)
    position fixed
    
.workspace
  position absolute
  left 50%
  top 0
  &.hide-money
    .money
      display none
  &.hide-accountability
    .accountability
      display none
  .connection
    position absolute