#actorEditor
  top 0
  left 0
  right 0
  bottom 0
  position absolute

  canvas, svg
    position absolute

.controls
  left 0
  top 50%
  margin-top -48px
  width 96px
  height 96px
  position fixed
  background linear-gradient(top, #ececec, #f7f7f7)
  border-top-right-radius 48px
  border-bottom-right-radius 48px
  box-shadow 0 1px 5px rgba(0,0,0,0.89)
  z-index 100
  .newActor
    top 0
    left 0
    padding 8px
    cursor move
  .actor.new
    margin 0
    width 80px
    height 80px
    font-size 11px
    position static
    box-shadow 0 1px 1px 1px rgba(0,0,0,.34), 0 1px #fbfbfb inset, 0 -2px #f0f0f0 inset, 0 0 0 2px #f9f9f9 inset
    transition width 250ms, height 250ms, margin 250ms

.workspace
  width 100%
  height 100%
  position relative