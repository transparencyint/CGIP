#actorEditor
  top 0
  left 0
  right 0
  bottom 0
  position absolute
  background #2C57A7 url(/images/bluegrid.svg) center top
  background-size 10px
  overflow hidden
  cursor url(/images/openhand_8_8.cur) 8 8, default
  &:active
    cursor url(/images/closedhand_8_8.bmp) 8 8, move
  &.zoom200
    background-size 200px
  &.zoom175
    background-size 175px
  &.zoom150
    background-size 150px
  &.zoom125
    background-size 125px
  &.zoom75
    background-size 75px
  &.zoom50
    background-size 50px
  &.zoom25
    background-size 25px
  &.connectionMode
    .actor
      cursor default
  .centerLine
    top 0
    left 50%
    width 0
    bottom 0
    border-right 1px solid rgba(0,0,0,.21)
    border-left 1px solid rgba(255,255,255,.08)
    position fixed
  .clickCatcher
    top 0
    right 0
    bottom 0
    left 0
    z-index 3
    position absolute
    cursor default
    
  .dragHandleBars,   
  .roleHolder
    height 100%
    position fixed
  .dragHandleBars
    .draghandle
      width 46px
      height 78px
      margin 0 0 0 -23px
      z-index 5
      cursor col-resize
      position absolute
      background black
      opacity 0
      &:hover
        opacity 0.1
  .roleHolder
    &:before
      content ""
      position fixed
      top 50px
      left -100%
      width 300%
      background hsl(220, 53%, 32%)
      height 28px
      border-bottom 1px solid hsl(220, 55%, 24%)
    .roleArea
      width 25%
      min-width 46px
      height 100%
      position absolute
      &#funding
        background hsla(76, 100%, 50%, 0.28)
      &#coordination
        background hsla(97, 100%, 50%, 0.19)
        left 25%
      &#implementation
        background hsla(155, 100%, 43%, 0.13)
        left 50%
      &#monitoring
        background hsla(222, 100%, 43%, 0.18)
        left 75%
      span
        min-width 46px
        margin-top 50px
        display block
        text-align center
        font-size 13px
        line-height 27px
        color hsl(220, 37%, 90%)
        text-shadow 0 -1px hsl(220, 38%, 15%)
        border 1px solid hsl(220, 55%, 24%)
        background hsl(220, 53%, 32%)
        box-shadow 1px 0 hsl(220, 43%, 43%) inset
      &:not(:first-child)
        span
          border-left none
      &:last-child
        span
          box-shadow 1px 0 hsl(220, 43%, 43%) inset, 1px 0 hsl(220, 43%, 43%)

.workspace
  position absolute
  left 50%
  top 0
  margin-top 78px
  &.hide-money
    .money
      display none
  &.hide-accountability
    .accountability
      display none
  &.hide-monitoring
    .monitoring
      display none
  .connection
    position absolute

.gridline
  position fixed
  display none
  background rgba(255,255,255,.55)
.gridline#gridlineV
  width 1px
  top 0
  bottom 0
.gridline#gridlineH
  margin-top 75px
  height 1px
  left 0
  right 0

