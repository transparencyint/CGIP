// nib is a powerful lib for stylus that provides cross-browser css3 mixins.
// No more vendor prefixes. http//visionmedia.github.com/nib/
@import 'nib'
@import 'shim'
@import 'home'

// Apply a natural box layout model to all elements.
// http//paulirish.com/2012/box-sizing-border-box-ftw/
*
  box-sizing border-box

html
  height 100%
  font 300 16px/27px "Helvetica Neue", Helvetica, Arial, sans-serif
  color white
  background url(../images/bluegrid.png) center top
  overflow hidden
  user-select none
  
body
  height 100%
  overflow hidden
  
::-moz-selection { background: #fe57a1; color: #fff; text-shadow: none; }
::selection { background: #fe57a1; color: #fff; text-shadow: none; }

.actor
  width 160px
  height 160px
  margin -80px 0 0 -80px
  box-sizing border-box
  position absolute
  text-transform uppercase
  color black
  background #E6E6E6
  border-radius 160px
  display box
  box-align center
  box-pack center
  box-shadow 0 1px 3px 1px rgba(0,0,0,.55), 0 0 0 1px rgba(255,255,255,0.34) inset
  z-index 1
  cursor move
  .name
    min-width 50%
    text-align center
  input
    width 66%
    font-size 100%
    text-align center
    display none
  &.editingName
    input
      display block
    .name
      display none
  span.delete
    position absolute
    top 0
    right 0
    background black
    color white
    padding 6px
    border-radius 10px
    
.breadcrumb
  margin 21px
  span
    margin 0 5px
    vertical-align text-bottom
  a, span
    color rgba(255,255,255,.34)
    text-decoration none
    &.selected
      color white