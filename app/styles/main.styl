// nib is a powerful lib for stylus that provides cross-browser css3 mixins.
// No more vendor prefixes. http//visionmedia.github.com/nib/
@import 'nib'
@import 'shim'
@import 'home'

// Apply a natural box layout model to all elements.
// http//paulirish.com/2012/box-sizing-border-box-ftw/
*
  box-sizing border-box

html
  height 100%
  font 300 16px/27px "Helvetica Neue", Helvetica, Arial, sans-serif
  color white
  background url(../images/bluegrid.png) center top
  
body
  height 100%
  
::-moz-selection { background: #fe57a1; color: #fff; text-shadow: none; }
::selection { background: #fe57a1; color: #fff; text-shadow: none; }

.actor
  width 160px
  height 160px
  position absolute
  line-height 160px
  text-align center
  text-transform uppercase
  color white
  background black
  border-radius 160px
  cursor default
#actor_editor
  canvas
    position absolute

#headlines
  list-style none
  li
    float left
    margin-left 20px


#import-form
  margin 100px 0 30px 0

#csv-upload-target
  width 50%
  height 100px
  background #ddd

  &.active-file
    background #fff