// Apply a natural box layout model to all elements.
// http//paulirish.com/2012/box-sizing-border-box-ftw/
*
  box-sizing border-box

html
  height 100%
  font 15px/27px Arial, sans-serif
  color white
  user-select none
  overflow hidden
  
body
  height 100%
  overflow hidden
  position relative
  
#container
  top 0
  right 0
  bottom 0
  left 0
  background #2C57A7 url(/images/bluegrid.svg) center top
  box-sizing border-box
  display box
  box-align center
  box-pack center
  box-orient vertical
  position absolute

a, a:visited
  color hsl(19,89%,55%)
  text-decoration none
a:hover
  color hsl(23,100%,58%)
  
::-moz-selection { background: #fe57a1; color: #fff; text-shadow: none; }
::selection { background: #fe57a1; color: #fff; text-shadow: none; }

h1
  margin 0 0 21px
  font-size 34px
  line-height 1
  font-weight normal
  text-shadow 0 1px 5px rgba(0,0,0,.55)
  
button
  padding 5px 8px
  border-radius 3px
  color #333
  text-shadow 0 1px white
  background linear-gradient(top, hsl(205,8%,90%), hsl(205,8%,85%))
  border none
  box-shadow 0 1px white inset, 0 2px rgba(0,0,0,.03), 0 0 0 1px rgba(0,0,0,.34), 0 -1px rgba(0,0,0,.13) inset
  &:hover
    background linear-gradient(top, hsl(205,8%,100%), hsl(205,8%,93%))
  &:active
    color hsl(0,0%,26%)
    text-shadow 0 1px hsl(0,0%,87%)
    background linear-gradient(top, hsl(205,5%,75%), hsl(205,8%,85%))
    box-shadow 0 1px rgba(0,0,0,.13) inset, 0 0 0 1px rgba(0,0,0,.40), 0 2px rgba(255,255,255,.21)
  &.callToAction
    color white
    text-shadow 0 -1px hsl(19,89%,40%)
    background linear-gradient(top, hsl(19,89%,55%), hsl(19,89%,50%))
    box-shadow 0 1px hsl(19,89%,65%) inset, 0 1px rgba(0,0,0,.13), 0 0 0 1px rgba(0,0,0,.34), 0 -1px hsl(19,89%,34%) inset
    &:hover
      background linear-gradient(top, hsl(23,100%,60%), hsl(23,100%,50%))
    &:active
      box-shadow 0 1px hsl(19,89%,65%) inset, 0 1px rgba(0,0,0,.13), 0 0 0 1px rgba(0,0,0,.34)
  &.danger
    color white
    text-shadow none
    background linear-gradient(top, hsl(0,100%,53%), hsl(0,100%,43%))
    box-shadow 0 1px hsl(0,100%,80%) inset, 0 1px rgba(0,0,0,0.13), 0 0 0 1px hsl(0,100%,21%), 0 -1px rgba(0,0,0,0.21) inset
  &.small
    padding 2px 4px
    border-radius 2px
    font-size 13px
    
nav
  margin 0 13px
  position absolute
  top -34px
  left 0
  z-index 4

.clear
  clear both
  
.center  
  width 100%
  height 100%
  display box
  box-align center
  box-pack center
  box-orient vertical
  
.hidden
  display none
  &.visible
    display block
