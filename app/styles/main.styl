// nib is a powerful lib for stylus that provides cross-browser css3 mixins.
// No more vendor prefixes. http//visionmedia.github.com/nib/
@import 'nib'
@import '_shim'
@import '_form'
@import '_list'
@import '_tables'
@import '_countrySelection'
@import '_actor'
@import '_connection'
@import '_contextMenu'
@import '_actorEditor'
@import '_importView'
@import '_roles'
@import '_lightbox'
@import '_metadataForm'
@import '_user'
@import '_connectionsList'

// Apply a natural box layout model to all elements.
// http//paulirish.com/2012/box-sizing-border-box-ftw/
*
  box-sizing border-box

html
  height 100%
  font 15px/27px Arial, sans-serif
  color white
  user-select none
  
body
  height 100%
  overflow hidden
  
#container
  padding 21px
  height 100%
  background url(/images/bluegrid.png) center top
  box-sizing border-box
  display box
  box-align center
  box-pack center
  box-orient vertical

a, a:visited
  color hsl(19,89%,55%)
  text-decoration none

a:hover
  color #ccc
  
::-moz-selection { background: #fe57a1; color: #fff; text-shadow: none; }
::selection { background: #fe57a1; color: #fff; text-shadow: none; }

h1
  margin 0 0 21px
  font-size 34px
  line-height 1
  text-shadow 0 1px 5px rgba(0,0,0,.55)
  
button
  padding 5px 8px
  border-radius 3px
  color #222
  text-shadow 0 1px rgba(255,255,255,.89)
  background linear-gradient(top, #ddd, #bbb)
  border 1px solid #333
  box-shadow 0 1px #fff inset, 0 1px rgba(0,0,0,.13)
  &:hover
    background linear-gradient(top, #fff, #ccc)
  &.callToAction
    color white
    text-shadow 0 -1px hsl(19,89%,40%)
    background linear-gradient(top, hsl(19,89%,55%), hsl(19,89%,50%))
    border-color solid hsl(19,55%,34%)
    border-bottom-color hsl(19,55%,21%)
    box-shadow 0 1px hsl(19,89%,65%) inset, 0 1px rgba(0,0,0,.13)
    &:hover
      background linear-gradient(top, hsl(19,100%,60%), hsl(19,100%,50%))
      
    
nav
  margin 13px
  position absolute
  top 0
  left 0
  a
    &.icon
      padding-left 21px
      background-size 16px
      background-position left top
      background-repeat no-repeat
    &.home
      background-image url(../images/home.png)

.clear
  clear both
