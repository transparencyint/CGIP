// nib is a powerful lib for stylus that provides cross-browser css3 mixins.
// No more vendor prefixes. http//visionmedia.github.com/nib/
@import 'nib'
@import '_shim'
@import '_home'
@import '_actorEditor'

// Apply a natural box layout model to all elements.
// http//paulirish.com/2012/box-sizing-border-box-ftw/
*
  box-sizing border-box

html
  height 100%
  font 300 16px/27px "Helvetica Neue", Helvetica, Arial, sans-serif
  color white
  background url(../images/bluegrid.png) center top
  overflow hidden
  user-select none
  
body
  height 100%
  overflow hidden
  
::-moz-selection { background: #fe57a1; color: #fff; text-shadow: none; }
::selection { background: #fe57a1; color: #fff; text-shadow: none; }

.actor
  width 160px
  height 160px
  margin -80px 0 0 -80px
  box-sizing border-box
  position absolute !important
  color black
  background linear-gradient(top, #f5f5f5, #fbfbfb)
  border-radius 160px
  display box
  box-align center
  box-pack center
  box-shadow 0 1px 5px 1px rgba(0,0,0,.55), 0 1px #fbfbfb inset, 0 -5px #f0f0f0 inset, 0 0 0 5px #f9f9f9 inset
  z-index 1
  cursor move
  .name
    min-width 50%
    text-align center
  input
    width 66%
    font-size 100%
    text-align center
    display none
  &.editingName
    input
      display block
    .name
      display none
  &.selected 
    box-shadow 0 0 0 3px #fe57a1, 0 1px 3px 1px rgba(0,0,0,.55), 0 0 0 1px rgba(255,255,255,0.34) inset
    ul
      display block
  ul
    margin -5px 0 0
    padding 0
    top 0
    left 100%
    list-style none
    position absolute
    display none
    li
      padding 5px 13px
      display block
      cursor pointer
      span
        padding 3px 8px
        font-size 0.8em
        color white
        white-space nowrap
        background rgba(0,0,0,.89)
        box-shadow 0 1px 5px rgba(0,0,0,.34)
        border-radius 5px
        &:hover
          background black
          box-shadow 0 1px 5px rgba(0,0,0,.89)
        &:active
          position relative
          top 1px
          box-shadow none
    
.breadcrumb
  margin 21px
  span
    margin 0 5px
    vertical-align text-bottom
  a, span
    color rgba(255,255,255,.34)
    text-decoration none
    &.selected
      color white