// Apply a natural box layout model to all elements.
// http//paulirish.com/2012/box-sizing-border-box-ftw/
*
  box-sizing border-box

html
  height 100%
  font 15px/27px "Helvetica Neue", Helvetica, Arial, sans-serif
  color white
  user-select none
  overflow hidden
  
body
  height 100%
  overflow hidden
  position relative
  text-rendering optimizeLegibility
  
#container
  top 0
  right 0
  bottom 0
  left 0
  box-sizing border-box
  position absolute
  overflow auto

a, a:visited, a:hover
  color white
  text-decoration none
  
::-moz-selection { background: #fe57a1; color: #fff; text-shadow: none; }
::selection { background: #fe57a1; color: #fff; text-shadow: none; }

h1
  margin 0 0 21px
  font-size 34px
  line-height 1
  font-weight normal
  text-shadow 0 1px 5px rgba(0,0,0,.55)

h3
  margin 0 0 13px
  font-size 22px
  font-weight normal
  font-family "HelveticaNeueW01-57Cn"
  text-transform uppercase
  
button
  padding 5px 8px
  border-radius 2px
  color #333
  text-shadow 0 1px white
  background linear-gradient(top, hsl(205,8%,90%), hsl(205,8%,85%))
  border none
  box-shadow 0 1px white inset, 0 2px rgba(0,0,0,.03), 0 0 0 1px rgba(0,0,0,.34), 0 -1px rgba(0,0,0,.05) inset
  &:hover
    background linear-gradient(top, hsl(205,8%,95%), hsl(205,8%,90%))
  &:active
    color hsl(0,0%,26%)
    text-shadow 0 1px hsl(0,0%,87%)
    background linear-gradient(top, hsl(205,5%,75%), hsl(205,8%,85%))
    box-shadow 0 1px rgba(0,0,0,.13) inset, 0 0 0 1px rgba(0,0,0,.40), 0 -1px rgba(0,0,0,.05) inset
  &.callToAction
    color white
    text-shadow 0 -1px hsl(19,89%,40%)
    background linear-gradient(top, hsl(19,89%,55%), hsl(19,89%,50%))
    box-shadow 0 1px hsl(19,89%,65%) inset, 0 1px rgba(0,0,0,.13), 0 0 0 1px rgba(0,0,0,.34), 0 -1px hsl(19,89%,34%) inset
    &:hover
      background linear-gradient(top, hsl(23,100%,60%), hsl(23,100%,50%))
    &:active
      box-shadow 0 1px hsl(19,89%,65%) inset, 0 1px rgba(0,0,0,.13), 0 0 0 1px rgba(0,0,0,.34)
  &.danger
    color white
    text-shadow none
    background linear-gradient(top, hsl(0,100%,53%), hsl(0,100%,43%))
    box-shadow 0 1px hsl(0,100%,80%) inset, 0 1px rgba(0,0,0,0.13), 0 0 0 1px hsl(0,100%,21%), 0 -1px rgba(0,0,0,0.21) inset
  &.small
    padding 0 8px
    border-radius 2px
    font-size 13px
    line-height 24px
  &.firstChoice
    background linear-gradient(top, hsl(205,55%,90%), hsl(205,55%,85%))
    box-shadow 0 1px rgba(255,255,255,.55) inset, 0 2px rgba(0,0,0,.03), 0 0 0 1px hsla(205,100%,13%,.34), 0 -1px rgba(0,0,0,.05) inset
    &:hover
      background linear-gradient(top, hsl(205,55%,95%), hsl(205,55%,90%))
    &:active
      background linear-gradient(top, hsl(205,55%,90%), hsl(205,55%,85%))
      box-shadow 0 1px rgba(0,0,0,.13) inset, 0 0 0 1px hsla(205,100%,13%,.40), 0 -1px rgba(0,0,0,.05) inset
          
#outofsync
  display none
  position fixed
  top 0
  left 0
  padding 10px
  background-color orange
  z-index 10

  &.show
    display block
    
    
.clickCatcher
  top 0
  right 0
  bottom 0
  left 0
  z-index 10
  position absolute
  cursor default

nav
  margin 0 13px
  position absolute
  top -34px
  left 0
  z-index 4

.hovered
  opacity .5

.workspace
  .outOfScope,
  .connection.outOfScope
    opacity .13

.clear
  clear both
  
.center  
  width 100%
  min-height 100%
  padding 34px 0
  box(center, center, vertical)
  
.hidden
  display none
  &.visible
    display block
