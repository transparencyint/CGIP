// nib is a powerful lib for stylus that provides cross-browser css3 mixins.
// No more vendor prefixes. http//visionmedia.github.com/nib/
@import 'nib'
@import '_shim'
@import '_home'
@import '_countries'
@import '_actor'
@import '_connection'
@import '_contextMenu'
@import '_actorEditor'
@import '_import'
@import '_roles'
@import '_lightbox'
@import '_metadataForm'
@import '_tables'

// Apply a natural box layout model to all elements.
// http//paulirish.com/2012/box-sizing-border-box-ftw/
*
  box-sizing border-box

html
  height 100%
  font 300 16px/27px "Helvetica Neue", Helvetica, Arial, sans-serif
  color white
  user-select none
  
body
  height 100%
  background url(../images/bluegrid.png) center top
  overflow hidden

a, a:visited
  color #fff

a:hover
  color #ccc

#container
  padding 0px 100px
  height 100%
  
::-moz-selection { background: #fe57a1; color: #fff; text-shadow: none; }
::selection { background: #fe57a1; color: #fff; text-shadow: none; }

h1
  text-shadow 0 1px 5px rgba(0,0,0,.55)
    
.breadcrumb
  margin 21px
  span
    margin 0 5px
    vertical-align text-bottom
  a, span
    color rgba(255,255,255,.34)
    text-decoration none
    &.selected
      color white

.clear
  clear both
