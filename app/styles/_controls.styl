.controls
  z-index 5
  text-shadow 0 -1px hsl(213,55%,34%)
  background linear-gradient(top, hsl(213,55%,55%), hsl(218,55%,50%))
  border 1px solid hsl(213,55%,28%)
  border-radius 3px
  box-shadow 0 0 1px rgba(0,0,0,.34), 0 0 5px rgba(0,0,0,.13)
  .control
    &:active, &.active
      background-color hsl(219,55%,36%)
  .label
    text-shadow none
    color hsl(217,60%,27%)
  input
    border 1px solid hsl(213,55%,38%)
    box-shadow 0 1px hsl(213,10%,80%) inset, 0 1px hsl(213,55%,53%)
    outline none
    border-radius 3px
    &:-moz-placeholder
      color gray
    &:focus
      padding 7px
      border-width 2px
      border-color #222
      box-shadow 0 0 2px hsl(0, 0%, 55%) inset
  &.top
    top 0
    border-top none
    border-top-right-radius 0
    border-top-left-radius 0
    &.right
      right 0
      border-bottom-right-radius 0
    &.left
      left 0
      border-bottom-left-radius 0

.controls.top
  .control
    &:first-child
      border-radius 3px 0 0 3px
    &:last-child
      border-radius 0 3px 3px 0
    &:only-child
      border-radius 3px
    
.controls.vertical
  .control
    &:first-child
      border-radius 3px 3px 0 0
    &:last-child
      border-radius 0 0 3px 3px
    &:only-child
      border-radius 3px

.tool.controls
  left 50%
  margin-left -201px
  position absolute
  > *
    float left
  .newActor  
    height 50px
    border-right 1px solid hsl(213,55%,28%)
    box-shadow 1px 0 hsl(213,55%,60%)
    cursor pointer
    &.slideUp
      .actor.new
        margin-top -18px
    &.slideIn
      .actor.new
        margin-top 100px
        transition width 500ms, height 500ms, margin 500ms
    &.curtainDown .actor.new 
      transition none
    .description
      height 37px
      padding-top 10px
      background linear-gradient(top, hsl(213,55%,55%), hsl(218,55%,52%))
      position relative
      z-index 5
    .plus
      font-size 16px
      font-weight bold
      vertical-align middle
      margin-right 5px
      margin-top -1px
      display inline-block
    .dock
      position absolute
      top -28px
      left 6px
      width 84px
      border-top 1px solid hsl(213,55%,28%)
      &:before
        content ""
        height 8px
        width 82px
        top 65px
        left -2px
        position absolute
        background linear-gradient(top, rgba(0,0,0,.21), rgba(255,255,255,.05))
        border 1px solid hsl(213,55%,28%)
        border-bottom-color hsl(213,55%,25%)
        border-top none
      &:after
        content ""
        position absolute
        top 64px
        height 2px
        left -2px
        width 100%
        box-shadow 0 1px 1px hsl(213,55%,28%) inset
        z-index 1
    .actor.new
      margin 0
      width 80px
      height 80px
      font-size 13px
      text-shadow none
      position relative !important
      transition width 250ms, height 250ms, margin 250ms
      cursor move
    .cancel
      position absolute
      top 0
      left 0
      width 64px
      height 64px
      box-sizing content-box
      padding 8px
      display table
      color rgba(0,0,0,.34)
      text-shadow 0 1px rgba(255,255,255,.13)
      font-size 13px
      border-radius 100%
      background rgba(0,0,0,.08)
      box-shadow 0 0 2px 1px rgba(0,0,0,.13) inset
      display none
      span
        display table-cell
        vertical-align middle
        text-align center        
  .description
    float left
    padding 13px 13px 8px
    font-size 13px
    img
      margin-bottom 3px
      display block
    .name
      font-size 11px
      text-align center
      display block
  .connection
    vertical-align top
    cursor pointer
    border-right 1px solid hsl(213,55%,28%)
    box-shadow 1px 0 hsl(213,55%,60%)
    &.active, &:active
      .description
        position relative
        top 1px
    &:last-child
      border-right none
      box-shadow none
      border-radius 0 0 3px 0
    .eye
      float left
      width 34px
      height 50px
      background url(/images/glyphicons_051_eye_open.png) no-repeat center center
      background-size 16px
      border-right 1px solid hsl(213,55%,40%)
      box-shadow 1px 0 hsl(213,55%,60%)
      display none
    &.invisible .eye
      background none

.sidebar  
  z-index 5
  position absolute
  left 0
  top 50%
  margin -125px 34px

.view.controls
  background linear-gradient(top, hsl(213,55%,50%), hsl(218,55%,48%))
  &:not(:last-child)
    margin-bottom 13px
  .range
    height 144px
    .ui-slider-vertical
      height 100%
      width 40px
      background none
      border none
      &:after
        content ""
        position absolute
        width 3px
        left 19px
        height 100%
        background white
        border-radius 3px
        box-shadow 0 1px 3px black
      .ui-slider-handle
        left 6px
        height 10px
        margin-bottom -5px
        width 28px
        background white
        border-radius 2px
        border none
        box-shadow 0 1px 3px black
        outline none
  .icon
    width 40px
    height 40px
    background-position center
    background-repeat no-repeat
    cursor pointer
    &.fit
      background-image url(../images/fit_screen.png)
    &.in
      background-image url(../images/zoom_in.png)
    &.out
      background-image url(../images/zoom_out.png)
