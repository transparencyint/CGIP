.roles
  margin-top 10px
  & > div
    width 8px
    height 8px
    border-radius 4px
    margin-right 2px
    float left
svg   
  .funding
    background #ffc345
    fill #ffc345
    stroke #ffc345 
  .coordination
    background #a5bfdd
    fill #a5bfdd
    stroke #a5bfdd
  .implementation
    background #c9dfaf
    fill #c9dfaf
    stroke #c9dfaf
  .monitoring
    background #d3cabd
    fill #d3cabd
    stroke #d3cabd
  .stuff
    background gray
    fill gray
    stroke gray
    
fundingColor = #ffc345
coordinationColor = #a5bfdd
implementationColor = #c9dfaf
monitoringColor = #d3cabd

.actor, .actor-group
  &[data-role='funding'] 
    .animationHolder:after, 
    .actor-style:after
      border-color fundingColor
  &[data-role='funding and coordination']
    .animationHolder,
    .actor-style
      &:before
        border-color fundingColor
      &:after
        border-color coordinationColor
  &[data-role='coordination'] 
    .animationHolder:after, 
    .actor-style:after
      border-color coordinationColor
  &[data-role='coordination and implementation']
    .animationHolder,
    .actor-style
      &:before
        border-color coordinationColor
      &:after
        border-color implementationColor
  &[data-role='implementation'] 
    .animationHolder:after, 
    .actor-style:after
      border-color implementationColor
  &[data-role='implementation and monitoring']
    .animationHolder,
    .actor-style
      &:before
        border-color implementationColor
      &:after
        border-color monitoringColor
  &[data-role='monitoring'] 
    .animationHolder:after, 
    .actor-style:after
      border-color monitoringColor